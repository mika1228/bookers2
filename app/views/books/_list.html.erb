<h2>User info</h2>

<th><%= image_tag user.get_profile_image(80,80) %></th><br>

<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<div class="form-group">
<th><%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-sm btn-block" do %>
  <i class="fas fa-user-cog"></i>
</th>
<% end %>
</div>

<p id="notice"><%= notice %></p>

<h2>New book</h2>

<%= form_with model: book do |f| %>
  <h6>Title</h6>
    <div class="form-group">
    <%= f.text_field :title, class: "form-control" %>
    </div>
  <h6>Opinion</h6>
    <div class="form-group">
    <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.submit "Create Book", class: "btn btn-success" %>
    </div>
<% end %>