<%= render 'list', book: @book, user: @user %>

<h2>Book detail</h2>

<table>
  <tbody>
      <tr>
        <th><%= image_tag @book.user.get_profile_image(100,100) %><br>
            <%= @book.user.name %>
        </th>
        <th><%= link_to @book.title, book_path(@book.id) %></th>
        <th><%= @book.body %></th>
        <% if @book.user == current_user %>
          <th><%= link_to "Edit", edit_book_path(@book.id) %></th>
          <th><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></th>
        <% end %>
      </tr>
  </tbody>
</table>