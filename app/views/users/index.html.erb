<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    
    <div class="col-lg-4">
      <%= render 'books/list', book: @book, user: @user %>
    </div>

    <div class="col-lg-8">
      <h2>Users</h2>

      <table class="table table-striped">

        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th><%= image_tag user.get_profile_image(50,50) %></th>
            <th><%= user.name %></th>
            <th><%= link_to "Show", user_path(user.id) %></th>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>
    
  </div>
</div>