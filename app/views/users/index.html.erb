<%= render 'books/list', book: @book, user: @user %>

<h2>Users</h2>

<table>

  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <th><%= image_tag user.get_profile_image(100,100) %></th>
      <th><%= user.name %></th>
      <th><%= link_to "Show", user_path(user.id) %></th>
    </tr>
    <% end %>
  </tbody>

</table>